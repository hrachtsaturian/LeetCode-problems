/**
 * @param {string} s
 * @return {boolean}
 */

// JavaScript
var isPalindrome = function (s) {
    const validString = s.replace(/[^a-zA-Z0-9]/g, '').toLowerCase()

    left = 0;
    right = validString.length - 1

    while (left < right) {
        if (validString[left] != validString[right]) return false
        left++;
        right--;
    }
    return true;
};

// Python
class Solution(object):
    def isPalindrome(self, s):
        """
        :type s: str
        :rtype: bool
        """
        only_letters = ''.join(char for char in s if char.isalnum()).lower()
        return only_letters == only_letters[::-1]

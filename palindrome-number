/**
 * @param {number} x
 * @return {boolean}
 */
var isPalindrome = function (x) {
    if (x < 0) {
        return false
    }
    if (x === 0) {
        return true
    }

    let charStr = x.toString();
    let left = 0;
    let right = charStr.length - 1;

    while (left < right) {
        if (charStr[left] != charStr[right]) {
            return false
        }
        left++;
        right--;
    }
    return true
};

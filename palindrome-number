/**
 * @param {number} x
 * @return {boolean}
 */

// JavaScript
var isPalindrome = function (x) {
    if (x < 0) {
        return false
    }
    if (x === 0) {
        return true
    }

    let charStr = x.toString();
    let left = 0;
    let right = charStr.length - 1;

    while (left < right) {
        if (charStr[left] != charStr[right]) {
            return false
        }
        left++;
        right--;
    }
    return true
};

// Python
class Solution(object):
    def isPalindrome(self, x):
        """
        :type x: int
        :rtype: bool
        """
        if x < 0:
            return False 
        
        str_num = str(x);
        reversed_str_num = str_num[::-1]
    
        if str_num == reversed_str_num:
            return True
    
        return False
